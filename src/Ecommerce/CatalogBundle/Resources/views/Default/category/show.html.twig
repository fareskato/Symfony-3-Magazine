{% extends 'default/front.html.twig' %}

{% block body %}
    <div class="container" style="margin-top: 31px">
        <div class="row">
            <div class="col-xs-12 text-center">
                <img class="img-responsive"  src="{{ asset('uploads/category/'~category.image) | imagine_filter('thumb1920x550') }}">
            </div>
        </div>
        <div class="row">
            <h1 class="text-center page-header">{{ category.title }}</h1>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <p>{{ category.description }}</p>
            </div>
        </div>
        {% if category.products | length %}
        <div class="row">
            <div class="col-xs-12">
                {% for product in category.products %}
                    <div class="col-md-3 text-center">
                        <img src="{{ asset('uploads/category/'~product.image) | imagine_filter('thumb260x257')  }}">
                        <h2><a href="{{ path('product_show', {'id' : product.id}) }}">{{ product.title }}</a></h2>
                        <p>${{ product.price }}</p>
                        <div><a class="btn btn-primary" href="">Add to cart</a></div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
            <div class="row">
                <div class="col-xs-12 text-center"><p>There are no products assigned to this category</p></div>
            </div>
        {% endif %}
    </div>
{% endblock %}
